<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="tags" type="org.kll.app.mamapper.Model.OverpassQueryResult.Element.Tags"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Manipulation.EditSchool">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/edit_text_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:enabled='@{tags.name == null}'
            android:text = '@{tags.name}'
            android:layout_weight="1"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name Nepali"
                    android:textStyle="bold"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/edit_text_nepali_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:enabled='@{tags.nepaliName == null}'
                    android:text = '@{tags.nepaliName}'
                    android:layout_weight="1"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operator"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_text_operator"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:enabled='@{tags.operatorType == null}'
                android:text = '@{tags.operatorType}'
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personnel Count"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_text_personnel_count"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:enabled='@{tags.personnelCount == null}'
                android:text = '@{tags.personnelCount}'
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Count"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_text_student_count"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:enabled='@{tags.studentCount == null}'
                android:text = '@{tags.studentCount}'
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:enabled='@{tags.phone == null}'
                android:text = '@{tags.phone}'
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/edit_text_website"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:enabled='@{tags.website == null}'
                android:text = '@{tags.website}'
                android:layout_weight="1"/>

        </LinearLayout>

        </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_senddata"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Submit Data"
            android:layout_weight="1"/>



    </LinearLayout>
</layout>